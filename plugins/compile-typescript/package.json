{
  "name": "@btilford/md-check-compile-typescript",
  "version": "1.0.0",
  "description": "Compile typescript markdown fences",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/btilford/md-check.git"
  },
  "keywords": [
    "markdown",
    "documentation",
    "docs",
    "typescript"
  ],
  "author": "btilford",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/btilford/md-check/issues"
  },
  "homepage": "https://btilford.github.io/md-check/",
  "publishConfig": {
    "access": "public"
  },
  "readme": "README.md",
  "contributors": [],
  "maintainers": [],
  "dependencies": {
    "typescript": "~3.8.3",
    "@btilford/md-check": "~1.0.0",
    "@btilford/ts-base": "~0.1.0"
  },
  "devDependencies": {
    "@types/node": "~13.11.1",
    "mocha": "~7.1.1",
    "@types/mocha": "~7.0.2",
    "chai": "~4.2.0",
    "@types/chai": "~4.2.11",
    "ts-node": "~8.8.2",
    "eslint": "~6.8.0",
    "@mocha/eslint-config-mocha": "~0.0.0",
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@typescript-eslint/eslint-plugin": "~2.27.0",
    "@typescript-eslint/parser": "~2.27.0",
    "eslint-config-standard": "~14.1.1",
    "eslint-plugin-editorconfig": "~2.1.2",
    "eslint-plugin-import": "~2.20.2",
    "eslint-plugin-json": "~2.1.1",
    "eslint-plugin-markdown": "~1.0.2",
    "eslint-plugin-md": "~1.0.15",
    "eslint-plugin-mocha": "~6.3.0",
    "eslint-plugin-mocha-only": "~0.0.3",
    "eslint-plugin-no-secrets": "~0.6.5",
    "eslint-plugin-optimize-regex": "~1.1.7",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-security": "~1.4.0",
    "eslint-plugin-sonarjs": "~0.5.0",
    "eslint-plugin-standard": "~4.0.1",
    "eslint-watch": "~6.0.1",
    "npm-run-all": "~4.1.5",
    "nyc": "~15.0.1",
    "source-map-support": "~0.5.16",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~3.8.3",
    "npm-watch": "~0.6.0",
    "eslint-plugin-mdx": "~1.6.8",
    "markdown-it": "~10.0.0",
    "@types/markdown-it": "~10.0.0"
  },
  "watch": {
    "test": {
      "patterns": [
        "src",
        "test",
        "node_modules/@btilford"
      ],
      "extensions": "ts",
      "quiet": true,
      "delay": 2000,
      "clearBuffer": false
    },
    "lint": {
      "patterns": [
        "."
      ],
      "ignore": [
        "reports/**/*",
        "dist/**/*",
        "dist/**/*",
        ".nyc.output/**/*"
      ],
      "extensions": "ts,json,html,js,md",
      "quiet": true,
      "delay": 2000,
      "clearBuffer": false
    }
  },
  "scripts": {
    "clean": "rm -rf dist/* .md-check/*",
    "compile": "tsc --project tsconfig.production.json",
    "watch:compile": "tsc --watch",
    "test": "nyc mocha --enable-source-maps --require ts-node/register --sort lib/**/*.spec.ts",
    "watch:test": "npm-watch test",
    "lint": "eslint . --ext js --ext ts --ext md",
    "lint:fix": "eslint . --fix --ext js --ext ts --ext md",
    "watch:lint": "npm-watch lint",
    "watch": "run-p watch:lint watch:test watch:compile",

    "build": "run-s lint compile test"

  }
}
